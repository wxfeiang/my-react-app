{
  "build": {
    "command": "pnpm run build"
  },
  "github": {
    "release": true
  },
  "git": {
    "commitMessage": "release: v${version}"
  },
  "npm": {
    "publish": false
  },
  "version": {
    "requireCleanWorkingDir": false
  },
  "hooks": {
    "before:init": "echo '操作是否配置版本号相关'",
    "after:bump": "echo 更新版本成功"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "increment": "patch"
}
